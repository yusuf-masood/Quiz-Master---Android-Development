<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F8F8">

    <!-- Header -->
    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingBottom="12dp"
        android:background="#FFFFFF"
        android:layout_marginBottom="70dp"
        app:layout_constraintBottom_toTopOf="@id/tvDetailQuestionText"
        android:elevation="2dp" />

    <!-- Question Text -->
    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/tvDetailQuestionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Question Text"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="1dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       />

    <!-- Correct Answer -->
    <TextView
        android:id="@+id/tvDetailCorrectAnswer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="1dp"
        android:padding="12dp"
        android:text="Correct Answer"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDetailQuestionText"
        tools:layout_editor_absoluteY="16dp" />

    <!-- Category -->
    <TextView
        android:id="@+id/tvDetailCategory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Category"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="1dp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tvDetailCorrectAnswer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
 />

    <!-- Difficulty -->
    <TextView
        android:id="@+id/tvDetailDifficulty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Difficulty"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#FFFFFF"
        android:elevation="1dp"
        android:textColor="#333333"
        app:layout_constraintTop_toBottomOf="@id/tvDetailCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
/>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="16sp"
        android:backgroundTint="#757575"
        android:textColor="#FFFFFF"
        android:elevation="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvDetailDifficulty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
       />

</androidx.constraintlayout.widget.ConstraintLayout>
